<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_singleproduct"
    android:layout_margin="6dp"
    android:orientation="horizontal"
    android:background="#EF98B6">

    <ImageView
        android:layout_width="180dp"
        android:id="@+id/prod_image"
        android:layout_height="180dp"
        android:src="@drawable/nature1"
        android:layout_margin="3dp"
        android:scaleType="fitCenter"
        android:padding="5dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="tshirt"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_price_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rs. 299"
                android:padding="8dp"
                android:layout_below="@id/tv_name_prod"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:background="#ED0909"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@id/tv_price_prod"
                android:textSize="20sp"
                android:text="Add to Cart"/>
        </RelativeLayout>

</LinearLayout>